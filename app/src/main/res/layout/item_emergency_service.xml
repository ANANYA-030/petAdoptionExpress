<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:id="@+id/serviceNameView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="Service Name : "
            android:textColor="#FF000000"
            android:textSize="30dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/serviceNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="Service Name"
            android:layout_below="@+id/serviceNameView"
            android:textColor="#FF000000"
            android:textSize="25dp"
             />

        <TextView
            android:id="@+id/serviceTypeView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="7dp"
            android:text="Service Type : "
            android:layout_below="@+id/serviceNameTextView"
            android:textColor="#FF000000"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/serviceTypeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="Service Type  "
            android:layout_below="@+id/serviceTypeView"
            android:textColor="#FF000000"
            android:textSize="25dp"
             />

        <TextView
            android:id="@+id/contactNumberView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="7dp"
            android:text="Contact number : "
            android:layout_below="@+id/serviceTypeTextView"
            android:textColor="#FF000000"
            android:textSize="30dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/contactNumberTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="Contact number"
            android:layout_below="@+id/contactNumberView"
            android:textColor="#FF000000"
            android:textSize="30dp"
            android:autoLink="phone"
            android:clickable="true"
            android:focusable="true"
          />


    </RelativeLayout>


</androidx.cardview.widget.CardView>
